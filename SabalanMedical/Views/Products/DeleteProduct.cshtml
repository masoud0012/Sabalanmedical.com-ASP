@model ProductResponse
<div class="container align-content-center">
    <h3>Are you sure to Delete @Model.ProductNameEn</h3>
    @if (Model.productImgs!=null)
    {
        <img src="~/images/products/@Model.productImgs.FirstOrDefault().ImageUrl" class="card-img-top" alt="..." style="width: 100%;height: 20rem"/>
    }
    else
    {
        
        <img src="~/images/unKnownImage.jpg" class="card-img-top" alt="..." style="width: 100%;height: 20rem" />
    }
    <form asp-controller="Products" asp-action="DeleteProduct" method="post">

        <input type="hidden" asp-for="ProductId" />
        <div>
            <button type="button" class="btn btn-primary">
                <a asp-controller="Products" asp-action="index">Cancell</a>
            </button>

            <button type="submit" class="btn btn-danger">Confirm</button>
        </div>
    </form>
</div>